extends layout

block content
  // Navigation
  nav.navbar.navbar-custom.navbar-fixed-top(role='navigation' ng-controller="collapseCtrl")
    .container
      .navbar-header
        button.navbar-toggle(ng-click="isCollapsed = !isCollapsed")
          i.fa.fa-bars
        |                 
        a.navbar-brand.page-scroll(href='#page-top')
          //i.fa.fa-play-circle
          |   
          span.light Jamie & Jorge 
          span= __("wedding")
      // Collect the nav links, forms, and other content for toggling
      .collapse.navbar-collapse.navbar-right.navbar-main-collapse(collapse="isCollapsed")
        ul.nav.navbar-nav
          // Hidden li included to remove active class from about link when scrolled up past about section
          li.hidden
            a(href='#page-top')
          li
            a.page-scroll(href='#about')= __("wedding info")
          li
            a.page-scroll(href='#rsvp')=__("rsvp")
          li
            a.page-scroll(href='#advice')= __("advice")
          li
            a.page-scroll(href='#contact')= __("contact")

      // /.navbar-collapse
    // /.container
    // Intro Header
  header.intro
      .intro-body
        .container
          .row
            .col-md-8.col-md-offset-2
              h1.brand-heading.font-hand J
                small &
                | J
              h2= __("spanish wedding")
              p.intro-text= __("intro text")
              a.btn.btn-circle.page-scroll(href='#about')
                i.fa.fa-angle-double-down.animated
  // About Section
  section#about.container.content-section.text-center
    .row
      .col-lg-8.col-lg-offset-2
        h2= __("wedding info")
        |                 
        p
          | Grayscale is a free Bootstrap 3 theme created by Start Bootstrap. It can be yours right now, simply download the template on 
          a(href='http://startbootstrap.com/template-overviews/grayscale/') the preview page
          | . The theme is open source, and you can use it for any purpose, personal or commercial.
        |                 
        p
          | This theme features stock photos by 
          a(href='http://gratisography.com/') Gratisography
          |  along with a custom Google Maps skin courtesy of 
          a(href='http://snazzymaps.com/') Snazzy Maps
          | .
        |                 
        p
          | Grayscale includes full HTML, CSS, and custom JavaScript files along with LESS files for easy customization.
  // Map Section
  #map

  // Download Section
  section#rsvp.content-section.text-center(ng-controller="rsvpCtrl")
    .download-section
      .container
        .col-lg-8.col-lg-offset-2
          h2= __("rsvp")
          flash:messages
          form(ng-submit="addRsvp()")
            div.form-group.col-md-12
              div.col-xs-12.col-md-6
                input.form-control(type="text" placeholder="First name" ng-model="firstName")
              div.col-xs-12.col-md-6
                input.form-control(type="text" placeholder="Last name" ng-model="lastName")
            div.form-group.col-md-6.col-md-offset-3
              input.form-control(type="text" placeholder="Email" ng-model="email")
            div.form-group.col-md-12
                label.btn.btn-default(ng-model="sleepPrefChoice" btn-radio="'Brihuega'") Brihuega
                label.btn.btn-default(ng-model="sleepPrefChoice" btn-radio="'Madrid'") Madrid
                label.btn.btn-default(ng-model="sleepPrefChoice" btn-radio="'No car'") No car
            div.form-group.col-md-12
              div.col-sm-6.col-sm-offset-3
                button.btn.btn-success.btn-lg.btn-block(type="submit") Confirm

  // Advice Section
  section#advice.content-section.text-center
    .download-section
      .container
        .col-lg-8.col-lg-offset-2
          h2= __("advice title")
          |                     
          p Say whayt you want!


  // Contact Section
  section#contact.container.content-section.text-center
    .row
      .col-lg-8.col-lg-offset-2
        h2= __("contact title")
        |                 
        p
          | Feel free to email us to provide some feedback on our templates, give us suggestions for new templates and themes, or to just say hello!
        |                 
        p
          a(href='mailto:wedding@jamieandjorge.com') wedding@jamieandjorge.com
        |                 
        ul.list-inline.banner-social-buttons
          li
            a.btn.btn-default.btn-lg(href='tel:620374968')
              i.fa.fa-phone.fa-fw
              |  
              span.network-name J&J
    // Footer
  footer
    .container.text-center
      p Copyright &copy; Jamie and Jorge wedding website 2014
  
